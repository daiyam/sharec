{
  "name": "awesome-project",
  "scripts": {
    "lint": "eslint 'src/**/*.{jsx,json}'"
  },
  "lint-staged": {
    "src/**/*.{js,json}": ["eslint --fix", "prettier --write", "git add"]
  },
  "husky": {
    "hooks": { "pre-commit": "lint-staged", "commit-msg": "commitlint -E" }
  },
  "config": {
    "commitizen": { "path": "cz-conventional-changelog" }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "node": false
    },
    "extends": "standard",
    "globals": {
      "baz": true
    },
    "rules": {
      "max-len": ["warn", 80, 2],
      "sort-imports": 0
    }
  },
  "eslintIgnore": ["/node_modules"],
  "devDependencies": {
    "@commitlint/cli": "^7.6.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint-config-prettier": "^4.2.0"
  }
}
